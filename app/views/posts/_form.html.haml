= form_for [@subject, @post] do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :post_type
    -# ###!
      Como :post_type Ã© delimitado em 2 valores, utlizaremos o seguinte combobox:
    = f.select :post_type, [["offer", "offer"],["looking", "looking"]]
