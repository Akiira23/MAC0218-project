= simple_form_for(@post) do |f|
  = f.error_notification
  .field
    .control
      = f.input :title, required: true, input_html: { class: 'input' }, wrapper: false, label_html: { class: "label" }
  .field
    .control
      = f.input :body, required: true, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "label" }
  .field
    %label.label Post
    .control.has-icons-left
      %span.select
        = f.input_field :subject_id, collection: @subjects.map { |c| [c.title, c.id] }, prompt: "Select subject"
      %span.icon.is-small.is-left
        %i.fa.fa-tag
  .field
    .control
      = f.button :submit, class:"button is-info"
