- content_for :page_title, @subject.title
%p#notice= notice
%section.section
  .container
    %nav.level
      / Left side
      .level-left
        %p.level-item
          %strong Actions
      / Right side
      .level-right
        %p.level-item
          = link_to "Edit", edit_subject_path(@subject), class:"button"
        %p.level-item
          = link_to 'Delete', @subject, method: :delete, data: { confirm: 'Are you sure?' }, class:"button is-danger"
    %hr/
    .content
      = @subject.specification
